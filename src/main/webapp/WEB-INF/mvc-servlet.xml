<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"       xmlns:mvc="http://www.springframework.org/schema/mvc"       xmlns:context="http://www.springframework.org/schema/context"       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       xsi:schemaLocation="http://www.springframework.org/schema/beans                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd                           http://www.springframework.org/schema/context                           http://www.springframework.org/schema/context/spring-context-3.2.xsd                           http://www.springframework.org/schema/mvc                           http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd ">    <!--              配置springMVC子容器，该容器配置的bean对父容器不可见             但是自容器可以无条件获取applicationContext.xml配置的Bean             达到单向隔离。     -->    <!-- 扫描Controller -->    <context:component-scan base-package="com.baizhi.controller"/>    <context:component-scan base-package="com.baizhi.serverInter"/>    <!-- 开启MVC注解，标识MVC环境 -->    <mvc:annotation-driven></mvc:annotation-driven>    <!-- 配置视图解析器 -->    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">        <property name="prefix" value="/"></property>        <property name="suffix" value=".jsp"></property>    </bean>    <!-- 静态资源加载 -->    <mvc:resources location="/" mapping="/**"/>    <!--  配置拦截器 -->    <mvc:interceptors>        <mvc:interceptor>            <mvc:mapping path="/**"/>            <mvc:exclude-mapping path="/mymanager/login"/>            <mvc:exclude-mapping path="/kaptcha/*"/>            <mvc:exclude-mapping path="/**/fonts/*"/>            <mvc:exclude-mapping path="/**/*.css"/>            <mvc:exclude-mapping path="/**/*.js"/>            <mvc:exclude-mapping path="/**/*.png"/>            <mvc:exclude-mapping path="/**/*.gif"/>            <mvc:exclude-mapping path="/**/*.jpg"/>            <mvc:exclude-mapping path="/**/*.jpeg"/>            <bean class="com.baizhi.interceptor.LoginInterceptor"></bean>        </mvc:interceptor>    </mvc:interceptors>    <!-- 全局异常 -->    <!--  <bean class="com.baizhi.exceptions.GlobalExceptionResolver"></bean> -->    <!-- <context:component-scan base-package="com.baizhi.exceptions"></context:component-scan> -->    <!-- 配置上传限定 -->    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">        <property name="maxUploadSize" value="52428800"></property>    </bean>    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">        <property name="messageConverters">            <list>                <!--json视图拦截器，读取到@ResponseBody的时候去配置它-->                <ref bean="mappingJacksonHttpMessageConverter"/>            </list>        </property>    </bean>    <!--json转化器，它可以将结果转化-->    <bean id="mappingJacksonHttpMessageConverter"          class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">        <property name="supportedMediaTypes">            <list>                <value>application/json;charset=UTF-8</value>            </list>        </property>    </bean></beans>